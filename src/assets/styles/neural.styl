#neural-overview
  width 100%
  height 100%
  background #676665

  .neuron
    stroke green
    fill blue
    stroke-width 3
  
    &.pulse

      &:hover
        -webkit-animation: ani 0.5s ease-out;
        -webkit-animation-iteration-count: infinite;

    &:hover
      width 150%
      height 150%

  .neuron-line
    stroke gray
    stroke-width 2
    
@-webkit-keyframes pulsate {
    0% {-webkit-transform: scale(0.1, 0.1); opacity: 0.0;}
    50% {opacity: 1.0;}
    100% {-webkit-transform: scale(2); opacity: 0.0;}
}


@keyframes ani 
    0%  
      transform-origin: 50% 50%;
      transform scale(1) 
    100% 
      transform-origin: 50% 50%;
      transform scale(2.5)
      opacity 0
    
