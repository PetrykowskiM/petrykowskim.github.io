@require 'variables'

@require "animations"

main
  color black
  font-family 'Ubuntu', sans
  min-width 286px

html, body
  background color_light
  -webkit-overflow-scrolling touch
  height 100%



.clickable
  cursor pointer
  z-index 15

  &:hover
    color color_primary

  

#cover
  background #2dcaa2
  width 100%
  height 100%

  &.facebook
    background color_facebook

  &.linkedin
    background color_linkedin
  
  &.github
    background color_github

  #header-wrapper
    color white
    font-weight light

    > .container
      padding-top 3.5rem

  .tagline
    position: absolute;
    top: 50%;
    -webkit-transform: translate3d(-5%, -50%, 0);
    transform: translate3d(-5%, -50%, 0);
    padding-left: 5%;

  .contact
    text-align center
    margin-top 2rem
    position absolute
    bottom 6%
    left 50%
    transform translate3d(-50%, 0, 0)


  .contact-link
    text-decoration none
    display inline-block

    &:hover
      cursor pointer !important

    .email
      background #3E5964
      // background #25A3D7
      color white
      height 4rem
      width 4rem
      margin auto
      border-radius 100%
      text-align center
      line-height 3.8rem
      font-size 2rem

      &:hover
        cursor pointer
        background #25A3D7

  .title-head
    font-family 'Cutive Mono', monospace

    > h1
      line-height 3.5rem
      margin-bottom 2rem

  .top-links
    position: relative;
    z-index: 10000;
    margin-bottom 1rem
    
    .social
      text-align right

      > a
        display inline-block
        padding 0 10px
        opacity 1
      
        &:hover
          cursor pointer
          opacity 1
        
        &.decent
          opacity 0.4

        > img
          height 2rem
          width 2rem
    .facebook
      > img
        padding 9px 3px 0px 10px
        border 1px solid white
        border-radius 5px

  h2
    opacity 1
    line-height 3rem
    font-weight 100 !important

#overlay-wrapper
  width 100%
  height 100%

  .overlay
    position absolute 
    top 40%
    left 50%
    z-index 100
    transform translate3d(-50%, -50%, 0) scale(0.1, 0.1)

    > span
      transform translate3d(0, -50%, 0)
      font-size 4rem


    &facebook
      background color_facebook